{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string"
        },
        "vnetConfig": {
            "type": "object"
        },
        "subnetsConfig": {
            "type": "array"
        },
        "nsgsConfig": {
            "type": "array"
        },
        "securityRules": {
            "type": "array"
        },
        "tags": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-05-01",
            "name": "[parameters('nsgsConfig')[copyIndex()].name]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "copy": {
                "name": "nsgLoop",
                "count": "[length(parameters('nsgsConfig'))]"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "[parameters('securityRules')[0].name]",
                        "properties": {
                            "priority": "[parameters('securityRules')[0].priority]",
                            "direction": "[parameters('securityRules')[0].direction]",
                            "access": "[parameters('securityRules')[0].access]",
                            "protocol": "[parameters('securityRules')[0].protocol]",
                            "sourcePortRange": "[parameters('securityRules')[0].sourcePortRange]",
                            "destinationPortRange": "[parameters('securityRules')[0].destinationPortRange]",
                            "sourceAddressPrefix": "[parameters('securityRules')[0].sourceAddressPrefix]",
                            "destinationAddressPrefix": "[parameters('securityRules')[0].destinationAddressPrefix]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-05-01",
            "name": "[parameters('vnetConfig').name]",
            "location": "[parameters('location')]",
            "tags": "[parameters('tags')]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('nsgsConfig')[sub(length(parameters('nsgsConfig')), 1)].name)]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": "[parameters('vnetConfig').address_space]"
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetsConfig')[0].name]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetsConfig')[0].address_prefixes[0]]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgsConfig')[0].name)]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('subnetsConfig')[1].name]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetsConfig')[1].address_prefixes[0]]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgsConfig')[1].name)]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
        "vnetName": {
            "type": "string",
            "value": "[parameters('vnetConfig').name]"
        }
    }
}