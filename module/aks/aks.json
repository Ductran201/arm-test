{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "aksConfig": {
        "type": "object",
        "metadata": {
          "description": "AKS configuration object"
        }
      },
      "location": {
        "type": "string"
      },
      "tags": {
        "type": "object"
      }
    },
    "resources": [
      {
        "type": "Microsoft.ContainerService/managedClusters",
        "apiVersion": "2024-01-01",
        "name": "[parameters('aksConfig').name]",
        "location": "[parameters('location')]",
        "tags": "[parameters('tags')]",
        "properties": {
          "dnsPrefix": "[parameters('aksConfig').dnsPrefix]",
          "agentPoolProfiles": [
            {
              "name": "[parameters('aksConfig').defaultNodePool.name]",
              "count": "[parameters('aksConfig').defaultNodePool.nodeCount]",
              "vmSize": "[parameters('aksConfig').defaultNodePool.vmSize]",
              "maxPods": "[parameters('aksConfig').defaultNodePool.maxPods]",
              "osDiskSizeGB": 128,
              "type": "VirtualMachineScaleSets",
              "mode": "System",
              "vnetSubnetID": "[parameters('aksConfig').defaultNodePool.vnetSubnetId]"
            }
          ],
          "identity": {
            "type": "[parameters('aksConfig').identity.type]"
          },
          "networkProfile": {
            "networkPlugin": "[parameters('aksConfig').networkProfile.networkPlugin]",
            "serviceCidr": "[parameters('aksConfig').networkProfile.serviceCidr]",
            "dnsServiceIP": "[parameters('aksConfig').networkProfile.dnsServiceIp]"
          }
        }
      }
    ],
    "outputs": {
      "aksClusterId": {
        "type": "string",
        "value": "[resourceId('Microsoft.ContainerService/managedClusters', parameters('aksConfig').name)]"
      }
    }
  }
  